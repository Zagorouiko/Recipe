<h1>Welcome to the Recipes</h1>

<% if @recipes.any? %>
  <h2>Here are you recipes</h2>
  <ul>
    <% @recipes.each() do |recipe| %>
    <li><a href='/recipe/<%= recipe.id %>'><%= recipe.name %></a></li>
    <% end %>
  </ul>

  <% else %>
  <p>You have not created any recipes yet.</p>

  <% end %>
